{
  "name": "@brandocms/europacss",
  "version": "0.14.0",
  "description": "Europa CSS system",
  "main": "lib/index.js",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "helpers"
  ],
  "scripts": {
    "dev": "babel src --out-dir lib --copy-files && yalc push",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest __tests__",
    "coverage": "jest __tests__ --coverage",
    "prebuild": "rimraf lib",
    "build": "babel src --out-dir lib --copy-files"
  },
  "author": "Univers <mail@univers.agency>",
  "license": "MIT",
  "repository": "https://github.com/brandocms/europacss.git",
  "bugs": {
    "url": "https://github.com/brandocms/europacss/issues"
  },
  "homepage": "https://github.com/brandocms/europacss",
  "files": [
    "lib",
    "stubs"
  ],
  "dependencies": {
    "lodash": "^4.17.21",
    "normalize.css": "^8.0.1",
    "postcss-extend-rule": "^4.0.0",
    "postcss-functions": "^4.0.0",
    "postcss-nested": "7.0.2",
    "postcss-reporter": "^7.1.0",
    "reduce-css-calc": "^2.1.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/node": "^7.26.0",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "lightningcss": "^1.29.2",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.3",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "postcss": "^8.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/customMatchers.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/fixtures/"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "browserslist": [
    "> 1%"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.9.0"
          }
        }
      ]
    ]
  }
}
